{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "checkJs": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./working-src/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": [
    "node_modules", 
    "build",
    "src"
  ]
}
